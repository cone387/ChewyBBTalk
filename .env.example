# ================================
# ChewyBBTalk 环境变量配置
# ================================
# 复制为 .env.dev（开发）或 .env.prod（生产）使用

# ================================
# 端口配置
# ================================
# nginx 总代理端口
PORT=8021
# 前端端口
FRONTEND_PORT=4010
# 后端端口
BACKEND_PORT=8020

# ================================
# Django 后端配置
# ================================
DEBUG=true
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_HOSTS=*
DATABASE_URL=sqlite:///db.sqlite3

# CORS 允许的源（逗号分隔）
CORS_ALLOWED_ORIGINS=https://localhost:8021,http://localhost:8021

# ================================
# Docker 服务地址
# ================================
# 前端地址（容器内：frontend:4010，本地：host.docker.internal:4010）
FRONTEND_UPSTREAM=frontend:4010
# 后端地址（容器内：backend:8020，本地：host.docker.internal:8020）
BACKEND_UPSTREAM=backend:8020

# ================================
# Docker 数据目录
# ================================
DATA_DIR=./data
NGINX_CONF=./nginx.conf

# ================================
# Authelia OIDC 配置
# ================================
AUTHELIA_IMAGE=authelia/authelia:4.37
AUTHELIA_SESSION_SECRET=change-this-to-a-random-string-at-least-32-chars
AUTHELIA_STORAGE_ENCRYPTION_KEY=change-this-encryption-key-at-least-20-chars
AUTHELIA_JWT_SECRET=change-this-jwt-secret-at-least-32-chars
AUTHELIA_SESSION_DOMAIN=localhost
AUTHELIA_DEFAULT_REDIRECTION_URL=https://localhost:8021
X_AUTHELIA_CONFIG_FILTERS=template
AUTHELIA_OIDC_HMAC_SECRET=change-this-oidc-hmac-secret-at-least-32-chars
