# ================================
# ChewyBBTalk 环境变量配置
# ================================
# 复制为 .env 使用

# ================================
# 端口配置
# ================================
# 前端端口
FRONTEND_PORT=4010
# 后端端口
BACKEND_PORT=8020

# ================================
# Django 后端配置
# ================================
DEBUG=false
SECRET_KEY=change-this-to-a-random-secret-key-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# 数据库配置
# SQLite (开发环境)
DATABASE_URL=sqlite:////app/data/db.sqlite3
# PostgreSQL (生产环境推荐)
# DATABASE_URL=postgresql://username:password@localhost:5432/chewybbtalk
# MySQL (可选)
# DATABASE_URL=mysql://username:password@localhost:3306/chewybbtalk

# CORS 配置
CORS_ALLOWED_ORIGINS=http://localhost:4010,https://your-domain.com
CORS_ORIGIN_ALLOW_ALL=False

# ================================
# 系统默认账号配置
# ================================
# 系统管理员账号（首次启动时创建）
ADMIN_USERNAME=admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password

# 开发环境模拟用户（跳过认证时使用）
DEV_USER_ID=1
DEV_USERNAME=admin
DEV_EMAIL=admin@example.com
DEV_GROUPS=admins,users

# ================================
# Docker 配置
# ================================
DATA_DIR=./data
