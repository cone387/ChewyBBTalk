# ================================
# ChewyBBTalk 开发环境配置
# ================================
# 复制到 .env 或直接使用: source .env.dev

# ================================
# 基础配置
# ================================

# 运行环境
ENV=dev

# Django 配置模块
CHEWYBBTALK_SETTINGS_MODULE=configs.dev_settings

# 调试模式
DEBUG=true

# ================================
# Django 配置
# ================================

# Django 密钥（开发环境可使用默认值）
SECRET_KEY=dev-secret-key-not-for-production

# 允许访问的主机
ALLOWED_HOSTS=*

# 数据库连接（开发环境使用 SQLite）
DATABASE_URL=sqlite:///./db.sqlite3

# CORS 允许的源
CORS_ALLOWED_ORIGINS=http://localhost:4010,http://localhost:3000,http://127.0.0.1:4010

# 语言和时区
LANGUAGE_CODE=zh-hans
TIME_ZONE=Asia/Shanghai

# ================================
# 服务端口
# ================================

# 后端端口
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0

# 前端端口
FRONTEND_PORT=4010

# Docker 映射端口
PORT=80

# ================================
# Authelia 配置（开发环境可使用默认值）
# ================================

# Session 密钥
AUTHELIA_SESSION_SECRET=dev-session-secret-at-least-32-characters

# 加密密钥
AUTHELIA_ENCRYPTION_KEY=dev-encryption-key-20chars

# ================================
# 媒体文件配置
# ================================

# 媒体文件 URL 前缀
MEDIA_URL=/media/
